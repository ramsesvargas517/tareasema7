package com.sc202.tareaejercicio1;

import javax.swing.JOptionPane;

/**
 *
 * @author Pablo
 */
public class TareaEjercicio1 {
    private int tamanio;
    private int arreglo[];

    public TareaEjercicio1(int tamanio) {
        this.tamanio = tamanio;
        this.arreglo = new int[this.tamanio];
    }
    
    public void rellenarArreglos() {
        for (int i = 0; i < arreglo.length; i++) {
            arreglo[i] = Integer.parseInt(JOptionPane.showInputDialog(""
                    + "Digite el valor a ingresar"));
        }
    }
    
public void imprimirArreglo() {
    for (int i = 0; i < arreglo.length; i++) {
        System.out.println("PosiciÃ³n: " +i + "Valor: " +arreglo[i]);
    }
  }
}
